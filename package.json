{
  "name": "english-speaking-backend",
  "version": "1.0.0",
  "description": "English Speaking Practice Platform Backend",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'",
    "migration:generate": "cross-env NODE_ENV=development typeorm-ts-node-esm migration:generate -d src/config/database.config.ts",
    "migration:run": "cross-env NODE_ENV=development typeorm-ts-node-esm migration:run -d src/config/database.config.ts",
    "migration:revert": "cross-env NODE_ENV=development typeorm-ts-node-esm migration:revert -d src/config/database.config.ts",
    "migration:show": "cross-env NODE_ENV=development typeorm-ts-node-esm migration:show -d src/config/database.config.ts",
    "migration:create": "cross-env NODE_ENV=development typeorm-ts-node-esm migration:create",
    "keys:generate": "node scripts/generate-keys.js",
    "seed:admin": "cross-env NODE_ENV=development node --loader ts-node/esm --no-warnings src/scripts/seed-admin.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.997.0",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^13.6.1",
    "google-auth-library": "^10.6.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "jose": "^6.1.3",
    "multer": "^2.0.2",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.3",
    "stripe": "^20.4.0",
    "typeorm": "^0.3.20",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.12.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.14",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  }
}
