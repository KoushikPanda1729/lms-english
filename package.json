{
  "name": "english-speaking-backend",
  "version": "1.0.0",
  "description": "English Speaking Practice Platform Backend",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format:check": "prettier --check 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'",
    "migration:generate": "typeorm-ts-node-esm migration:generate -d data-source.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d data-source.ts",
    "migration:revert": "typeorm-ts-node-esm migration:revert -d data-source.ts",
    "migration:show": "typeorm-ts-node-esm migration:show -d data-source.ts",
    "migration:create": "typeorm-ts-node-esm migration:create",
    "keys:generate": "node scripts/generate-keys.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.7.4",
    "ioredis": "^5.3.2",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.2",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.3"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  }
}
