# CORS
CORS_ORIGIN_WEB=http://localhost:3000
CORS_ORIGIN_MOBILE=http://localhost:8081

# JWT RS256
# Store private and public key inline with \n escaped
# Generate keys: npm run keys:generate
# Then run: awk 'NF {sub(/\r/, ""); printf "%s\\n",$0;}' keys/private.pem
PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----"
PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_KEY_HERE\n-----END PUBLIC KEY-----"
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d
JWT_KEY_ID=key-v1

# TURN Server (Coturn HMAC)
TURN_SECRET=your_hmac_secret_here
TURN_HOST=turn.yourdomain.com
TURN_PORT=3478

# Payment
